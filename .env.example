# Example environment configuration
# Copy this file to .env and fill in your actual API keys

# Required API Keys
OPENAI_API_KEY=your_openai_api_key_here
GROQ_API_KEY=your_groq_api_key_here

# Optional but recommended for cloud vector storage
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENV=your_pinecone_environment_here

# Optional: LangSmith for monitoring and tracing
LANGSMITH_API_KEY=your_langsmith_api_key_here
LANGCHAIN_TRACING_V2=true
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com
LANGCHAIN_PROJECT=rag-human-rights-evaluation

# Database Configuration
CHROMA_PERSIST_DIRECTORY=./data/chroma_db
PINECONE_INDEX_NAME=human-rights-index

# Model Configuration
DEFAULT_EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
DEFAULT_LLM_MODEL=gpt-3.5-turbo

# Application Settings
STREAMLIT_SERVER_PORT=8501
LOG_LEVEL=INFO
